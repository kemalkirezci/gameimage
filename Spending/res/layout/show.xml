<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_height="wrap_content" android:text="Quan ly thu chi"
		android:gravity="center_vertical|center_horizontal" android:textSize="18dip"
		android:layout_width="fill_parent" android:textStyle="bold" />
	<CheckBox android:id="@+id/chkDelete" android:text=" Cho phép click vào để xóa"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TableLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:stretchColumns="*">
		<TableRow>
			<TextView android:paddingLeft="5dip" 
				android:text="Số Tiền" android:textStyle="bold" android:gravity="left" />
			<TextView android:gravity="right" android:paddingRight="10dip"
				android:textStyle="bold" android:text="Ngày tháng" />
		</TableRow>
	</TableLayout>
	<ListView android:id="@+id/ListView01" android:layout_height="wrap_content"
		android:layout_width="fill_parent" />
</LinearLayout>