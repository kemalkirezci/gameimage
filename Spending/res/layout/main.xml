<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:shrinkColumns="*" android:stretchColumns="*"
	android:background="#faf0e6">
	<!-- title -->
	<TableRow android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:gravity="center">
		<TextView android:layout_width="match_parent"
			android:textStyle="bold" android:gravity="center"
			android:layout_height="wrap_content" android:textSize="12dp"
			android:text="Chương trình quản lý thu chi" android:layout_span="3"
			android:padding="8dip" />
	</TableRow>

	<TableRow android:gravity="center">
		<RelativeLayout android:layout_width="fill_parent"
			android:gravity="center" android:layout_height="108dip"
			android:orientation="horizontal">
			<ImageView android:id="@+id/imgIncome" android:src="@drawable/income"
				android:scaleType="fitXY" android:layout_centerInParent="true"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwIncome" android:width="100px"
				android:text="Chi tiêu" android:gravity="center_horizontal"
				android:height="30px" android:layout_width="wrap_content"
				android:layout_centerInParent="true" android:layout_height="wrap_content"
				android:layout_below="@id/imgIncome" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:gravity="center" android:layout_height="fill_parent"
			android:orientation="horizontal">
			<ImageView android:id="@+id/imgDelete" android:src="@drawable/delete"
				android:scaleType="fitXY" android:layout_centerInParent="true"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwDelete" android:width="100px"
				android:layout_centerInParent="true" android:text="Xóa"
				android:gravity="center_horizontal" android:height="30px"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@id/imgDelete" />
		</RelativeLayout>
	</TableRow>

	<TableRow android:gravity="center">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_span="1" android:layout_height="108dip"
			android:orientation="horizontal">
			<ImageView android:id="@+id/imgSearch" android:src="@drawable/search2"
				android:scaleType="fitXY" android:layout_centerInParent="true"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwSearch" android:width="100px"
				android:height="30px" android:text="Tìm kiếm" android:gravity="center_horizontal"
				android:layout_centerInParent="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@id/imgSearch" />
		</RelativeLayout>
	</TableRow>

	<TableRow android:gravity="center">
		<RelativeLayout android:gravity="center"
			android:layout_height="108dip">
			<ImageView android:id="@+id/imgStatistics" android:src="@drawable/statistics"
				android:layout_centerInParent="true" android:scaleType="fitXY"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwStatistics"
				android:layout_below="@id/imgStatistics" android:width="100px"
				android:height="30px" android:text="Thống kê" android:gravity="center_horizontal"
				android:layout_centerInParent="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		<RelativeLayout android:gravity="center"
			android:layout_height="108dip">
			<ImageView android:id="@+id/imgSetting" android:src="@drawable/setting2"
				android:layout_centerInParent="true" android:scaleType="fitXY"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwSetting" android:layout_below="@id/imgSetting"
				android:width="100px" android:height="30px" android:text="Cấu hình"
				android:layout_centerInParent="true" android:gravity="center_horizontal"
				android:layout_height="wrap_content" android:layout_width="wrap_content" />
		</RelativeLayout>
	</TableRow>

</TableLayout>
