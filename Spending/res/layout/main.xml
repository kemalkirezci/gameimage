<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:shrinkColumns="*" android:stretchColumns="*"
	android:background="#ffffff">
	<!-- title -->
	<TableRow android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:gravity="center">
		<TextView android:layout_width="match_parent"
			android:gravity="center" android:layout_height="wrap_content"
			android:textSize="10dp" android:text="Chương trình quản lý thu chi"
			android:layout_span="3" android:padding="18dip" />
	</TableRow>

	<TableRow android:layout_height="wrap_content"
		android:gravity="center" android:layout_width="match_parent">
		<RelativeLayout android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="fill_parent" android:orientation="horizontal">
			<ImageView android:id="@+id/imgIncome" android:src="@drawable/income"
				android:scaleType="fitXY" android:layout_centerInParent="true"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwIncome" android:width="100px"
				android:text="Thu vào" android:gravity="center_horizontal"
				android:height="30px" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@id/imgIncome" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="fill_parent" android:orientation="horizontal">
			<ImageView android:id="@+id/imgPayment" android:src="@drawable/payment"
				android:scaleType="fitXY" android:layout_centerInParent="true"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwPayment" android:width="100px"
				android:text="Chi tiêu" android:gravity="center_horizontal"
				android:height="30px" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@id/imgPayment" />
		</RelativeLayout>
	</TableRow>

	<TableRow android:layout_height="wrap_content"
		android:gravity="center" android:layout_width="match_parent">
		<RelativeLayout android:layout_height="fill_parent"
			android:gravity="center" android:orientation="horizontal">
			<ImageView android:id="@+id/imgSearch" android:src="@drawable/search2"
				android:scaleType="fitXY" android:layout_width="60px"
				android:layout_centerInParent="true" android:layout_height="60px" />
			<TextView android:id="@+id/tvwSearch" android:width="100px"
				android:height="30px" android:text="Tìm kiếm" android:gravity="center_horizontal"
				android:layout_centerInParent="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@id/imgSearch" />
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:gravity="center" android:layout_height="fill_parent"
			android:orientation="horizontal">
			<ImageView android:id="@+id/imgStatistics" android:src="@drawable/statistics"
				android:layout_centerInParent="true" android:scaleType="fitXY"
				android:layout_width="60px" android:layout_height="60px" />
			<TextView android:id="@+id/tvwStatistics" android:width="100px"
				android:height="30px" android:text="Thống kê" android:gravity="center_horizontal"
				android:layout_centerInParent="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@id/imgStatistics" />
		</RelativeLayout>
	</TableRow>
	<TableRow android:layout_height="wrap_content"
		android:gravity="center" android:layout_width="match_parent">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_span="1" android:layout_height="fill_parent"
			android:orientation="horizontal">
			<ImageView android:id="@+id/imgSetting" android:src="@drawable/setting2"
				android:scaleType="fitXY" android:layout_width="60px"
				android:layout_height="60px" />
			<TextView android:id="@+id/tvwSetting" android:width="100px"
				android:text="Cấu hình" android:gravity="center_horizontal"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@id/imgSetting" />
		</RelativeLayout>
	</TableRow>

</TableLayout>
